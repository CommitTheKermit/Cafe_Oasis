<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/some_id">

    <View
        android:id="@+id/arrow1"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/arrow"
        />

    <TextView
        android:id="@+id/text_sign1"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/arrow1"
        android:layout_marginTop="20dp"
        android:text="@string/some_id7"
        android:textAppearance="@style/some_id7"
        android:lineSpacingExtra="-4sp"
        android:gravity="top"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sign1_email"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/text_sign1"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/some_id8"
        android:textAppearance="@style/some_id8"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sign1_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:hint="@string/abc_gmail_c"
        android:textSize="14sp"
        android:textColorHint="#bdbdbd"
        android:paddingLeft="13dp"
        />

    <TextView
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_5"
        android:gravity="center"
        android:text="인증 메일 전송"
        android:textColor="@color/black"
        android:textSize="15sp" />

