<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EmailAuthenticationActivity">

    <View
        android:id="@+id/email_auth_arrow"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/arrow"
        />

    <TextView
        android:id="@+id/text_sign4"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/email_auth_arrow"
        android:layout_marginTop="20dp"
        android:text="@string/some_id7"
        android:textAppearance="@style/some_id7"
        android:lineSpacingExtra="-4sp"
        android:gravity="top"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sign1_check_email"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/text_sign4"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:text="@string/some_id9"
        android:textAppearance="@style/some_id9" />

    <EditText
        android:id="@+id/edit_check_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sign1_check_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        />

    <TextView
        android:id="@+id/btn_check_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_15"
        android:text="확인 완료"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"

        />


</RelativeLayout>