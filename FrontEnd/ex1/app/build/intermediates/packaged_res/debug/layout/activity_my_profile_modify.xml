<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/some_id">

    <View
        android:id="@+id/profile_modify_arrow1"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="23dp"
        android:alpha="0.7"
        android:background="@drawable/arrow_back"
        />

    <TextView
        android:id="@+id/text_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/profile_modify_arrow1"
        android:text="개인정보 수정"
        android:textAppearance="@style/some_id7"
        android:lineSpacingExtra="-4sp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/text_modify_name"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/text_modify"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:lineSpacingExtra="-2sp"
        android:text="이름"
        android:textAppearance="@style/some_id9" />

    <EditText
        android:id="@+id/modify_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_modify_name"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:textSize="14sp"
        android:textColorHint="#bdbdbd"
        android:paddingLeft="13dp"
        android:fontFamily="@font/neo"
        />

    <TextView
        android:id="@+id/text_modify_nickname"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/modify_name"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:lineSpacingExtra="-2sp"
        android:text="@string/some_id20"
        android:textAppearance="@style/some_id9" />

    <EditText
        android:id="@+id/modify_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_modify_nickname"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:fontFamily="@font/neo"
        android:paddingLeft="13dp"
        android:textColorHint="#bdbdbd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_modify_age"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/modify_nickname"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/some_id21"
        android:textAppearance="@style/some_id9"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/modify_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_modify_age"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:hint="@string/some_id22"
        android:textSize="14sp"
        android:textColorHint="#bdbdbd"
        android:paddingLeft="13dp"
        android:fontFamily="@font/neo"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="2"
        />

    <TextView
        android:id="@+id/text_modify_num"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/modify_age"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/some_id23"
        android:textAppearance="@style/some_id9"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/modify_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_modify_num"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:hint="@string/some_id24"
        android:paddingLeft="13dp"
        android:textColorHint="#bdbdbd"
        android:textSize="14sp"
        android:fontFamily="@font/neo"
        android:digits="-0123456789"
        android:inputType="number"
        />

    <Spinner
        android:id="@+id/spinner_gen_mod"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/modify_num"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/btn_profile_modify"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangle_15"
        android:text="완료"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/neo"
        />

</RelativeLayout>