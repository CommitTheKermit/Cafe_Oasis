<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/some_id">

    <View
        android:id="@+id/main_image"
        android:layout_width="146dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="106dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/main_image"
        />

    <TextView
        android:id="@+id/login_email"
        android:layout_width="320dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id1"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/login_input_email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="208dp"
        android:background="@drawable/rectangle_1"
        android:hint="@string/abc_gmail_c"
        android:textSize="14sp"
        android:textColorHint="#bdbdbd"
        android:paddingLeft="13dp"
        />
    <!-- 비밀번호 -->
    <TextView
        android:id="@+id/login_password"
        android:layout_width="320dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:text="@string/some_id2"
        android:textAppearance="@style/some_id1"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="302dp"
        android:background="@drawable/rectangle_2"
        android:hint="@string/password"
        android:textSize="14sp"
        android:textColorHint="#bdbdbd"
        android:paddingLeft="13dp"
        />
    <CheckBox
        android:id="@+id/email_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"

        />

    <TextView
        android:id="@+id/remember_email"
        android:layout_width="286dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="51dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:text="@string/some_id3"
        android:textAppearance="@style/some_id3"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />
    <CheckBox
        android:id="@+id/keep_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="384dp"
        />
    <TextView
        android:id="@+id/maintain_login"
        android:layout_width="286dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="51dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="384dp"
        android:text="@string/some_id4"
        android:textAppearance="@style/some_id3"
        android:lineSpacingExtra="-2sp"
        android:gravity="top"
        />
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="415dp"
        android:background="@drawable/button1"
        android:text="@string/some_id5"
        android:textAppearance="@style/some_id4"
        android:textAlignment="center"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_sign"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="463dp"
        android:background="@drawable/button1"
        android:text="@string/some_id6"
        android:textAppearance="@style/some_id4"
        android:textAlignment="center"
        android:gravity="center"
        />
    <View
        android:id="@+id/btn_naver"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="529dp"
        android:background="@drawable/naver1"
        />
    <View
        android:id="@+id/btn_kakao"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="197dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="529dp"
        android:background="@drawable/kakao1"
        />

</RelativeLayout>