<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:id="@+id/mainFrameLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/merriweather"
            android:text="Best cafe\nfor you"
            android:textColor="#6CA3C9"
            android:textSize="40sp" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="222dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/oasislogo" />

        <android.widget.Button
            android:id="@+id/rating_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/button_background_selector"
            android:fontFamily="@font/neo"
            android:text="Rating"
            android:textAllCaps="false"
            />

        <android.widget.Button
            android:id="@+id/recommendation_btn"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:layout_toRightOf="@+id/rating_btn"
            android:background="@drawable/button_background_selector"
            android:fontFamily="@font/neo"
            android:text="Recommendation"
            android:textAllCaps="false" />

        <android.widget.Button
            android:id="@+id/bookmarket_btn"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:layout_toRightOf="@+id/recommendation_btn"
            android:background="@drawable/button_background_selector"
            android:fontFamily="@font/neo"
            android:text="BookMarker"
            android:textAllCaps="false"/>

        <FrameLayout
            android:id="@+id/child_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="230dp">

        </FrameLayout>

        <android.widget.Button
            android:id="@+id/btn_map_home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background_clicked"
            android:fontFamily="@font/neo"
            android:text="지도에서 확인" />


        <android.widget.Button
            android:id="@+id/btn_recomm_home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="150dp"
            android:fontFamily="@font/neo"
            android:text="추천받기"
            android:layout_alignRight="@id/btn_map_home"
            android:background="@drawable/button_background_clicked"
            />



    </RelativeLayout>




</FrameLayout>