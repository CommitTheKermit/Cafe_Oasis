<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Change_pw_Activity">


    <View
        android:id="@+id/arrow_change_pw"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="23dp"
        android:alpha="0.7"
        android:background="@drawable/arrow_back"
        />

    <TextView
        android:id="@+id/text_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="64dp"
        android:gravity="top"
        android:text="비밀번호 변경"
        android:textAppearance="@style/some_id7" />

    <TextView
        android:id="@+id/text_change_pw_email"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_below="@+id/text_change_pw"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:text="변경할 비밀번호"
        android:textAppearance="@style/some_id8" />

    <EditText
        android:id="@+id/edit_change_pw_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_change_pw_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_1"
        android:fontFamily="@font/neo"
        android:paddingLeft="13dp"
        android:textColorHint="#bdbdbd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_change_pw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_change_pw_email"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="9dp"
        android:alpha="0.9"
        android:background="@drawable/rectangle_5"
        android:fontFamily="@font/neo"
        android:gravity="center"
        android:text="비밀번호 변경"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>